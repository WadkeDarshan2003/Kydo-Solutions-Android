rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ USERS COLLECTION ============
    // Allow users to create their own document during signup
    // Also allow admins to manage all users
    match /users/{userId} {
      allow create: if request.auth.uid == userId || (request.auth != null && request.auth.token.role == 'admin');
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
    
    // ============ ADMINS COLLECTION ============
    // Allow admin to create self or be created by another admin
    match /admins/{adminId} {
      allow create: if request.auth.uid == adminId || (request.auth != null && request.auth.token.role == 'admin');
      allow read, write: if request.auth != null && (request.auth.uid == adminId || request.auth.token.role == 'admin');
      allow read: if request.auth != null && (request.auth.token.tenantId == resource.data.tenantId || request.auth.token.role == 'admin');
    }
    
    // ============ TENANTS COLLECTION ============
    // Allow creating tenant during admin signup and reading/updating by the admin
    match /tenants/{tenantId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.adminId;
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.adminId || request.auth.token.role == 'admin');
    }
    
    // ============ TENANT-BASED ACCESS ============
    // All data under tenants/{tenantId} path (projects, vendors, etc.)
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.tenantId == tenantId;
    }
    
    // ============ TOP-LEVEL COLLECTIONS ============
    // Projects, Vendors, Designers, Clients and all subcollections
    match /projects/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /vendors/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /designers/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /clients/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /financialRecords/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // ============ DEFAULT FALLBACK ============
    // Catch all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}