rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ USERS COLLECTION ============
    // Allow users to create their own document during signup
    // Also allow admins to manage all users
    match /users/{userId} {
      allow create: if request.auth.uid == userId || (request.auth != null && request.auth.token.role == 'admin');
      allow read, write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == 'admin');
    }
    
    // ============ ADMINS COLLECTION ============
    // Allow admin to create self or be created by another admin
    match /admins/{adminId} {
      allow create: if request.auth.uid == adminId || (request.auth != null && request.auth.token.role == 'admin');
      allow read, write: if request.auth != null && (request.auth.uid == adminId || request.auth.token.role == 'admin');
      allow read: if request.auth != null && (request.auth.token.tenantId == resource.data.tenantId || request.auth.token.role == 'admin');
    }
    
    // ============ VENDORS COLLECTION ============
    // Vendors can read/write their own profile
    // Admins can manage all vendors
    // Vendors with multi-tenant support (tenantIds array)
    match /vendors/{vendorId} {
      allow create: if request.auth != null && (request.auth.uid == vendorId || request.auth.token.role == 'admin');
      allow read: if request.auth != null && (
        request.auth.uid == vendorId || 
        request.auth.token.role == 'admin' ||
        // Admin can read vendor if vendor is in their tenant
        (request.auth.token.role == 'admin' && (
          request.auth.token.tenantId in resource.data.tenantIds ||
          request.auth.token.tenantId == resource.data.tenantId
        ))
      );
      allow write: if request.auth != null && (
        request.auth.uid == vendorId || 
        request.auth.token.role == 'admin'
      );
    }
    
    // ============ DESIGNERS COLLECTION ============
    // Designers can read/write their own profile
    // Admins can manage all designers
    // Designers with multi-tenant support (tenantIds array)
    match /designers/{designerId} {
      allow create: if request.auth != null && (request.auth.uid == designerId || request.auth.token.role == 'admin');
      allow read: if request.auth != null && (
        request.auth.uid == designerId || 
        request.auth.token.role == 'admin' ||
        // Admin can read designer if designer is in their tenant
        (request.auth.token.role == 'admin' && (
          request.auth.token.tenantId in resource.data.tenantIds ||
          request.auth.token.tenantId == resource.data.tenantId
        ))
      );
      allow write: if request.auth != null && (
        request.auth.uid == designerId || 
        request.auth.token.role == 'admin'
      );
    }
    
    // ============ TENANTS COLLECTION ============
    // Allow creating tenant during admin signup and reading/updating by the admin
    match /tenants/{tenantId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.adminId;
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.adminId || request.auth.token.role == 'admin');
    }
    
    // ============ TENANT-BASED ACCESS ============
    // All data under tenants/{tenantId} path (projects, vendors, etc.)
    match /tenants/{tenantId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.tenantId == tenantId;
    }
    
    // ============ TOP-LEVEL COLLECTIONS ============
    // Projects - Tenant-based access control
    match /projects/{projectId} {
      allow read: if request.auth != null && (
        request.auth.token.role == 'admin' ||
        // Admin can read if project is in their tenant
        (request.auth.token.role == 'admin' && request.auth.token.tenantId == resource.data.tenantId) ||
        // Vendor/Designer with multi-tenant support
        (request.auth.token.role == 'vendor' && (
          request.auth.token.tenantId in resource.data.get([], {}) ||
          request.auth.token.tenantIds.size() > 0 && request.auth.token.tenantId in resource.data.tenantIds
        )) ||
        (request.auth.token.role == 'designer' && (
          request.auth.token.tenantId in resource.data.get([], {}) ||
          request.auth.token.tenantIds.size() > 0 && request.auth.token.tenantId in resource.data.tenantIds
        ))
      );
      allow write: if request.auth != null && (
        request.auth.token.role == 'admin' ||
        request.auth.uid == resource.data.get('leadDesignerId')
      );
      
      // Subcollections (tasks, finances, documents, etc.)
      match /{subcollection=**} {
        allow read, write: if request.auth != null && (
          request.auth.token.role == 'admin' ||
          request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.leadDesignerId
        );
      }
    }
    
    match /vendors/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /designers/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /clients/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Financial Records - Tenant-based access
    match /financialRecords/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // ============ DEFAULT FALLBACK ============
    // Catch all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}